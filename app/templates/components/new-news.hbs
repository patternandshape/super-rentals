{{#if addNewNews}}
  <h1>NEWS</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>
      <button {{action 'save4'}}>Save</button>
    </form>
  </div>
  {{else}}
  <button {{action 'newsFormShow'}}>Add News</button>
{{/if}}
{{yield}}
